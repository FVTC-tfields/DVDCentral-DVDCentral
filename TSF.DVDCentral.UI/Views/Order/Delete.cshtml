@model TSF.DVDCentral.BL.Models.Order

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="m-2">Are you sure you want to delete this?</h3>
<div class="m-2">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShipDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipDate)
        </dd>
    </dl>
    
    <div class="form-group">
        <label asp-for="OrderItems" class="control-label"></label>
        <select asp-for="OrderItems"
                class="form-control"
                multiple
                asp-items="@(new MultiSelectList(Model.OrderItems, "Id", "Name"))">
        </select>
        <span asp-validation-for="OrderItems" class="text-danger"></span>
    </div>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>

    <div>
        <partial name="_OrderPartial" model="Model.OrderItems" />
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}