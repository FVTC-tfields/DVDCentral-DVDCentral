@model IEnumerable<TSF.DVDCentral.BL.Models.OrderItem>
<table id="myData" class="table data-table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@item.ImagePath"
                         id="movieimage"
                         alt="@item.Description"
                         onclick="on('/images/@item.ImagePath')"
                         class="imagepropsmall" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-route-orderId="@item.OrderId" asp-route-orderItemId="@item.Id" asp-action="Delete" asp-controller="OrderItem">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript" class="init">
    $.noConflict();
    jQuery(document).ready(function ($) {
        $('#myData').DataTable({
            "lengthMenu": [[5, 10, 25, 30, -1], [5, 10, 25, 30, "All"]]
        });
    });
</script>

